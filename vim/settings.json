{
    "pyls": {
        "configurationSources": ["flake8"],
	"python.formatting.provider": "black",
        "plugins": {
			"black": {
				"enabled": true
			},
			"isort": {
				"enabled": true
			},
			"flake8": {
				"enabled": true
			},
			"yapf": {
				"enabled": false
			},
            "pyflakes": {
                "enabled": false
            },
            "pycodestyle": {
                "enabled": false
            },
            "autopep8": {
                "enabled": false
            },
            "pydocstyle": {
                "enabled": false
            }
		}
	}
}
