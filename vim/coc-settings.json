{
    "coc.preferences.formatOnSaveFiletypes": [
        "python",
        "cpp"
    ],
    "suggest.timeout": 5000,
    "suggest.maxPreviewWidth": 15,
    "diagnostic.refreshAfterSave": true,
    "diagnostic.warningSign": "",
    "diagnostic.errorSign": "",
    "diagnostic.hintSign": "",
    "diagnostic.infoSign": "",
    "languageserver": {
        "clangd": {
            "command": "clangd-8",
            "filetypes": [
                "c",
                "cpp",
                "objc",
                "objcpp"
            ]
        },
        "pyls": {
            "command": "pyls",
            "filetypes": [
                "python"
            ],
            "settings": {
                "pyls": {
                    "enable": true,
                    "commandPath": "",
                    "configurationSources": [
                        "flake8"
                    ],
                    "plugins": {
                        "pycodestyle": {
                            "enabled": false
                        },
                        "pydocstyle": {
                            "enabled": false,
                            "match": "(?!test_).*\\.py",
                            "matchDir": "[^\\.].*"
                        },
                        "pyflakes": {
                            "enabled": false
                        },
                        "flake8": {
                            "enabled": true
                        },
                        "black": {
                            "enabled": true
                        },
                        "yapf": {
                            "enabled": false
                        }
                    }
                }
            }
        }
    }
}
