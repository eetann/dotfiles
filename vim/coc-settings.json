{
	"coc.preferences.timeout": 1000,
	"coc.preferences.formatOnSaveFiletypes": ["python"],
	"coc.preferences.hoverTarget": "echo",
	"suggest.detailMaxLength": 50,
	"suggest.timeout": 1000,
	"signature.target": "echo",
	"diagnostic.refreshAfterSave": true,
	"diagnostic.warningSign": "",
	"diagnostic.errorSign": "",
	"diagnostic.hintSign": "",
	"diagnostic.infoSign": "",
	"python.formatting.provider": "black",
	"python.jediEnabled": true,
	"python.linting.flake8Enabled": false,
	"python.linting.pydocstyleEnabled": false,
	"python.linting.enabled": true,
	"python.sortImports.path": "isort",
	"languageserver": {
		"clangd": {
			"command": "clangd-6.0",
			"rootPatterns": ["compile_flags.txt", "compile_commands.json", ".vim/", ".git/", ".hg/"],
			"filetypes": ["c", "cpp", "objc", "objcpp"]
		},
		 "pyls": {
		 	"command": "pyls",
		 	"filetypes":["python"],
		 	"settings": {
		 		"pyls.plugins.pyflakes.enabled":false,
		 		"pyls.plugins.pycodestyle.enabled":false,
		 		"pyls.plugins.pydocstyle.enabled":false,
		 		"pyls.plugins.autopep8.enabled":false,
		 		"pyls.plugins.yapf.enabled":false,
		 		"pyls.plugins.black.enabled":true,
		 		"pyls.plugins.isort.enabled":true,
		 		"pyls.plugins.rope_completion.enabled":true,
		 		"pyls.plugins.flake8.enabled":true
		 	}
		 }
	}
}
