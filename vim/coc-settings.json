{
    "coc.preferences.formatOnSaveFiletypes": [
        "python",
        "cpp"
    ],
    "suggest.timeout": 5000,
    "suggest.maxPreviewWidth": 15,
    "diagnostic.refreshAfterSave": true,
    "diagnostic.warningSign": "",
    "diagnostic.errorSign": "",
    "diagnostic.hintSign": "",
    "diagnostic.infoSign": "",
    "languageserver": {
        "clangd": {
            "command": "clangd-6.0",
            "filetypes": [
                "c",
                "cpp",
                "objc",
                "objcpp"
            ]
        },
        "python": {
            "command": "pyls",
            "args": ["-vv"],
            "filetypes": ["python"],
            "rootPatterns": [
                "setup.py",
                "requirements.txt",
                "pyproject.toml",
                "src",
                ".git",
                ".env"],
            "settings": {
                "pyls": {
                    "enable": true,
                    "commandPath": "",
                    "configurationSources": ["flake8"],
                    "plugins": {
                        "jedi_completion": {
                            "enabled": false
                        },
                        "jedi_hover": {
                            "enabled": true
                        },
                        "jedi_references": {
                            "enabled": true
                        },
                        "jedi_signature_help": {
                            "enabled": true
                        },
                        "jedi_symbols": {
                            "enabled": true,
                            "all_scopes": true
                        },
                        "mccabe": {
                            "enabled": true,
                            "threshold": 15
                        },
                        "preload": {
                            "enabled": true
                        },
                        "pycodestyle": {
                            "enabled": false
                        },
                        "pydocstyle": {
                            "enabled": false,
                            "match": "(?!test_).*\\.py",
                            "matchDir": "[^\\.].*"
                        },
                        "pyflakes": {
                            "enabled": true
                        },
                        "rope_completion": {
                            "enabled": true
                        },
                        "black": {
                            "enabled": true
                        },
                        "autopep8": {
                            "enabled": false
                        },
                        "isort": {
                            "enabled": true
                        },
                        "yapf": {
                            "enabled": false
                        }
                    }
                }
            }
        }
    }
}
